<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#eceff1"
    tools:context="com.example.mostafa.aman.MainActivity"
    android:orientation="vertical">
    <!--android:background="#FCB331"-->
    <!--android:background="#eceff1"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/main_logo"
        tools:ignore="ContentDescription" />
        </LinearLayout>
     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:paddingTop="40dp"
    android:layout_weight="3"
    android:orientation="vertical">
    <Spinner
        style="@android:style/Widget.DeviceDefault.Light.DropDownItem.Spinner"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spinner_govrnment"
        android:layout_margin="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:paddingRight="30dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_spinner"
        />

    <Spinner
        style="@android:style/Widget.DeviceDefault.Light.DropDownItem.Spinner"
        android:spinnerMode="dialog"
        android:popupBackground="#eceff1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spinner_specially"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:paddingRight="30dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_spinner"
        android:gravity="center"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textColor="#f1c099"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:background="@drawable/seo"
        android:id="@+id/search_btn"
        android:layout_marginTop="15dp"
        tools:ignore="HardcodedText" />
</LinearLayout>

</LinearLayout>
